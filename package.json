{
  "name": "seguri-bookmarkleter",
  "version": "1.0.0",
  "description": "Create bookmarklets in your browser with a simple copy and paste.",
  "main": "index.js",
  "scripts": {
    "prebuild": "test -f uglify.js || uglifyjs --self --wrap exports -c -m -o uglify.js",
    "build": "browserify index.js | uglifyjs -o bundle.min.js",
    "lint": "prettier --write '**/*.{js,css,html}'",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seguri/bookmarkleter.git"
  },
  "author": "Marco Seguri",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/seguri/bookmarkleter/issues"
  },
  "homepage": "https://seguri.github.io/bookmarkleter/",
  "dependencies": {
    "uglify-js": "^3.15.4"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "mocha": "^9.2.2",
    "prettier": "2.6.2"
  }
}
